#!/bin/sh

CURRENT=$(xbacklight -get)
rounded=$(echo "($CURRENT+0.5)/1" | bc)
label="ðŸ’¡"
if [ -z $1 ];
then
	cat ~/.cache/backlight-value
	exit 1
fi
if [ "$rounded" -lt "35" ]
then
	xbacklight -set 50
	label="$label med"
elif [ "$rounded" -lt "65" ]
then
	xbacklight -set 80
	label="$label hi"
else
	xbacklight -set 4
	label="$label low"
fi

echo $label > ~/.cache/backlight-value
pkill -RTMIN+2 dwmblocks
