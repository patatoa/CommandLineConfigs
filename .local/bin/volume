#!/bin/sh

 pulseaudio-ctl $1  && 
	 pulseaudio-ctl full-status |
	 awk '{
	  if ($2 =="yes")
		  print "ðŸ”‡<span color=\"red\"> mute </span>"
	  else
		  if($1 < 35) emoji="ðŸ”ˆ"
		  else if($1 < 65) emoji="ðŸ”‰"
		  else emoji="ðŸ”Š"

		  print "<span color=\"green\">" emoji $1 "%</span>"
	  }' > ~/.config/i3blocks/vol && 
	 pkill -RTMIN+1 i3blocks
