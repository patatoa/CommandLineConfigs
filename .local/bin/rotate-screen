#!/bin/sh
xrandr -x -y
CurrentRotate=$(xinput list-props 15 |grep Matrix | awk -F '[:.,]' '{print $2}')
echo $CurrentRotate
[ $CurrentRotate -ge 0 ] &&
	xinput set-prop 15 --type=float "Coordinate Transformation Matrix" -1 0 1 0 -1 1 0 0 1 ||
	xinput set-prop 15 --type=float "Coordinate Transformation Matrix" 0 0 0 0 0 0 0 0 0
